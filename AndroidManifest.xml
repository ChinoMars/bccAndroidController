<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chinomars.bccAndroidViewer"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" android:maxSdkVersion="19"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <application android:label="@string/app_name" android:icon="@drawable/icon" android:allowBackup="true">
        <activity android:name="com.chinomars.bccAndroidViewer.SplashScreen"
                  android:screenOrientation="portrait"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="com.chinomars.bccAndroidViewer.BccController"
                android:label="@string/app_name"
                android:screenOrientation="portrait"
                android:configChanges="keyboardHidden">
            <intent-filter>
                <action android:name="com.chinomars.bccAndroidViewer.BccController"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!--<activity android:name="chinomarsrs.bccAndroidViewer.About"-->
        <!--android:label="@string/txt_btn_about">-->
        <!---->
        <!--</activity>-->

        <activity android:name="com.chinomars.bccAndroidViewer.ShowDetail"
                  android:configChanges="keyboardHidden"
                  android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.chinomars.bccAndroidViewer.ShowDetail"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

        <activity
                android:name="com.chinomars.bccAndroidViewer.ResultController"
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="com.chinomars.bccAndroidViewer.ResultController"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
